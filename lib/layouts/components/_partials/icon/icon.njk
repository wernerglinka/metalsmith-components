{% macro icon(item, iconWidth) %}
  {% if item.url | hasUrl %}
    <a class="icon-wrapper" href="{{ item.url }}" {% if item.url | isExternal %} target="_blank" rel="noopener noreferrer" aria-label="{{ item.title }} (opens in new window)" {% endif %}>
      {% include "icons/" + item.icon + ".njk" ignore missing %}
    </a>
  {% else %}
    <div class="icon-wrapper">
      {% include "icons/" + item.icon + ".njk" ignore missing %}
    </div>
  {% endif %}
{% endmacro %}