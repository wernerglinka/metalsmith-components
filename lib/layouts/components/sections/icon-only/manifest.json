{
  "name": "icon-only",
  "type": "section",
  "styles": ["icon-only.css"],
  "scripts": [],
  "requires": ["ctas", "icon", "commons"],
  "validation": {
    "required": ["sectionType", "icon"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "icon-only"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "icon.icon": {
        "type": "string"
      },
      "icon.url": {
        "type": "string"
      },
      "icon.title": {
        "type": "string"
      },
      "ctas": {
        "type": "array",
        "items": {
          "properties": {
            "isButton": {
              "type": "boolean"
            },
            "buttonStyle": {
              "type": "string",
              "enum": ["primary", "secondary", "tertiary", "inverted"]
            },
            "isSmall": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
