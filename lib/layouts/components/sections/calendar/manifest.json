{
  "name": "calendar",
  "type": "section",
  "styles": ["calendar.css"],
  "scripts": ["calendar.js"],
  "requires": ["text", "commons"],
  "modules": {
    "providers": ["google-calendar.js"],
    "helpers": ["date-utils.js", "event-transformer.js"]
  },
  "validation": {
    "required": ["sectionType"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "calendar"
      },
      "calendars": {
        "type": "object",
        "properties": {
          "source": {
            "type": "string",
            "description": "Data source file name in lib/data/calendars/"
          }
        }
      },
      "text": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "prose": {
            "type": "string"
          }
        }
      }
    }
  }
}
