<section class="search-section">
  <div class="container">
    {% if section.text.title %}
      <h2 class="search-title">{{ section.text.title }}</h2>
    {% endif %}
    
    {% if section.text.subtitle %}
      <p class="search-subtitle">{{ section.text.subtitle }}</p>
    {% endif %}
    
    <div class="search-container">
      <div class="search-input-container">
        <input 
          type="text" 
          id="search-input" 
          placeholder="{{ section.text.placeholder or 'Search...' }}"
          class="search-input"
          autocomplete="off"
          spellcheck="false"
        />
        <button type="button" id="search-clear" class="search-clear" aria-label="Clear search">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>
      </div>
      
      {% if section.settings.showCategories %}
      <div class="search-filters">
        <select id="category-filter" class="category-filter">
          <option value="all">All Content</option>
          <option value="page">Pages</option>
          <option value="section">Sections</option>
        </select>
        
        <select id="component-type-filter" class="component-type-filter">
          <option value="all">All Components</option>
          <option value="hero">Hero</option>
          <option value="text-only">Text Only</option>
          <option value="media-image">Media Image</option>
          <option value="cta">Call to Action</option>
          <option value="banner">Banner</option>
          <option value="slider">Slider</option>
          <option value="flip-cards">Flip Cards</option>
          <option value="logos-list">Logos List</option>
          <option value="testimonial">Testimonial</option>
          <option value="columns">Columns</option>
          <option value="blog-list">Blog List</option>
          <option value="maps">Maps</option>
        </select>
      </div>
      {% endif %}
      
      <div class="search-status" id="search-status" aria-live="polite"></div>
      
      <div id="search-results" class="search-results" role="region" aria-label="Search results"></div>
    </div>
  </div>
</section>