{
  "name": "search",
  "type": "section",
  "styles": ["search.css"],
  "scripts": ["search.js"],
  "requires": ["text"],
  "validation": {
    "required": ["sectionType"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "search"
      },
      "text.title": {
        "type": "string"
      },
      "text.subtitle": {
        "type": "string"
      },
      "text.placeholder": {
        "type": "string",
        "default": "Search..."
      },
      "settings.showCategories": {
        "type": "boolean",
        "default": false
      },
      "settings.maxResults": {
        "type": "number",
        "default": 20
      },
      "settings.resultTypes": {
        "type": "array",
        "default": ["page", "section"]
      },
      "settings.showRelevanceScore": {
        "type": "boolean",
        "default": true
      },
      "settings.enableHighlighting": {
        "type": "boolean",
        "default": true
      },
      "settings.minCharacters": {
        "type": "number",
        "default": 2
      }
    }
  }
}