{
  "name": "collection-list",
  "type": "section",
  "styles": ["collection-list.css"],
  "scripts": [],
  "requires": [],
  "requiredPlugins": ["metalsmith-sectioned-blog-pagination"],
  "validation": {
    "required": ["sectionType", "collectionName"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "collection-list"
      },
      "collectionName": {
        "type": "string",
        "description": "Name of the collection to display (e.g., 'blog', 'components')"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "containerFields.noMargin.top": {
        "type": "boolean"
      },
      "containerFields.noMargin.bottom": {
        "type": "boolean"
      },
      "containerFields.noPadding.top": {
        "type": "boolean"
      },
      "containerFields.noPadding.bottom": {
        "type": "boolean"
      }
    }
  }
}
