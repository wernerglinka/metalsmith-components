{
  "name": "openlayers",
  "version": "1.0.0",
  "description": "Interactive map section using OpenLayers with support for multiple markers and popups",
  "type": "section",
  "scripts": ["openlayers.js"],
  "styles": ["openlayers.css"],
  "dependencies": [],
  "fields": {
    "latitude": {
      "type": "number",
      "required": true,
      "description": "Map center latitude"
    },
    "longitude": {
      "type": "number",
      "required": true,
      "description": "Map center longitude"
    },
    "zoom": {
      "type": "number",
      "default": 10,
      "description": "Initial zoom level"
    },
    "containerId": {
      "type": "string",
      "default": "map",
      "description": "Unique ID for the map container"
    },
    "containerHeight": {
      "type": "number",
      "default": 600,
      "description": "Height of the map container in pixels"
    },
    "markers": {
      "type": "array",
      "description": "Array of map markers",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Marker title (tooltip)"
          },
          "latitude": {
            "type": "number",
            "required": true,
            "description": "Marker latitude"
          },
          "longitude": {
            "type": "number",
            "required": true,
            "description": "Marker longitude"
          },
          "content": {
            "type": "object",
            "description": "Popup content",
            "properties": {
              "title": {
                "type": "string",
                "description": "Popup title"
              },
              "body": {
                "type": "string",
                "description": "Popup body text"
              },
              "link": {
                "type": "string",
                "description": "Optional link URL"
              }
            }
          }
        }
      }
    }
  }
}