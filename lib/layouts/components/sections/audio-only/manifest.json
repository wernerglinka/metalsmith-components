{
  "name": "audio-only",
  "type": "section",
  "styles": ["audio-only.css"],
  "scripts": [],
  "requires": ["ctas", "audio", "commons"],
  "validation": {
    "required": ["sectionType", "audio"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "audio-only"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "audio.ogg": {
        "type": "string"
      },
      "audio.mpeg": {
        "type": "string"
      },
      "audio.bgImage": {
        "type": "string"
      },
      "audio.alt": {
        "type": "string"
      },
      "ctas": {
        "type": "array",
        "items": {
          "properties": {
            "isButton": {
              "type": "boolean"
            },
            "buttonStyle": {
              "type": "string",
              "enum": ["primary", "secondary", "tertiary", "inverted"]
            }
          }
        }
      }
    }
  }
}