{
  "name": "blurbs",
  "type": "section",
  "styles": ["blurbs.css"],
  "scripts": ["blurbs.js"],
  "requires": ["ctas", "text", "image", "icon", "commons"],
  "validation": {
    "required": ["sectionType"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "blurbs"
      },
      "isDisabled": {
        "type": "boolean"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "containerFields.noMargin.top": {
        "type": "boolean"
      },
      "containerFields.noMargin.bottom": {
        "type": "boolean"
      },
      "containerFields.noPadding.top": {
        "type": "boolean"
      },
      "containerFields.noPadding.bottom": {
        "type": "boolean"
      },
      "containerFields.background.isDark": {
        "type": "boolean"
      },
      "blurbs.layout": {
        "type": "string",
        "enum": ["inline", "featurePlus"]
      },
      "isReverse": {
        "type": "boolean"
      },
      "blurbs.source": {
        "type": "string"
      }
    }
  }
}