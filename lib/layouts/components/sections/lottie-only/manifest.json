{
  "name": "lottie-only",
  "type": "section",
  "styles": [],
  "scripts": [],
  "requires": ["ctas", "lottie", "commons"],
  "validation": {
    "required": ["sectionType", "lottie"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "lottie-only"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "lottie.src": {
        "type": "string"
      },
      "lottie.control": {
        "type": "object",
        "properties": {
          "autoplay": {
            "type": "boolean"
          },
          "loop": {
            "type": "boolean"
          }
        }
      },
      "ctas": {
        "type": "array",
        "items": {
          "properties": {
            "isButton": {
              "type": "boolean"
            },
            "buttonStyle": {
              "type": "string",
              "enum": ["primary", "secondary", "tertiary", "inverted"]
            },
            "isSmall": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}