{
  "name": "image-only",
  "type": "section",
  "styles": ["image-only.css"],
  "scripts": [],
  "requires": ["ctas", "image", "commons"],
  "validation": {
    "required": ["sectionType", "image"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "image-only"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "image.src": {
        "type": "string"
      },
      "image.alt": {
        "type": "string"
      },
      "image.caption": {
        "type": "string"
      },
      "ctas": {
        "type": "array",
        "items": {
          "properties": {
            "isButton": {
              "type": "boolean"
            },
            "buttonStyle": {
              "type": "string",
              "enum": ["primary", "secondary", "tertiary", "inverted"]
            },
            "isSmall": {
              "type": "boolean"            }
          }
        }
      }
    }
  }
}