{
  "name": "simple-accordion",
  "type": "section",
  "styles": ["simple-accordion.css"],
  "scripts": ["simple-accordion.js"],
  "requires": ["text", "ctas", "commons"],
  "validation": {
    "required": ["sectionType"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "simple-accordion"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "text.titleTag": {
        "type": "string",
        "enum": ["h1", "h2", "h3", "h4", "h5", "h6"],
        "default": "h2"
      },
      "faqs.scope": {
        "type": "string",
        "enum": ["all", "selections"]
      },
      "expandFirst": {
        "type": "boolean"
      },
      "allowMultiple": {
        "type": "boolean"
      },
      "ctas": {
        "type": "array",
        "items": {
          "properties": {
            "isButton": {
              "type": "boolean"
            },
            "buttonStyle": {
              "type": "string",
              "enum": ["primary", "secondary", "tertiary", "inverted"]
            }
          }
        }
      }
    }
  }
}