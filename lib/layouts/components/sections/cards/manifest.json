{
  "name": "cards",
  "type": "section",
  "styles": ["cards.css"],
  "scripts": ["cards.js"],
  "requires": ["ctas", "text", "image", "commons"],
  "validation": {
    "required": ["sectionType"],
    "properties": {
      "sectionType": {
        "type": "string",
        "const": "cards"
      },
      "isDisabled": {
        "type": "boolean"
      },
      "containerFields.inContainer": {
        "type": "boolean"
      },
      "containerFields.isAnimated": {
        "type": "boolean"
      },
      "containerFields.noMargin.top": {
        "type": "boolean"
      },
      "containerFields.noMargin.bottom": {
        "type": "boolean"
      },
      "containerFields.noPadding.top": {
        "type": "boolean"
      },
      "containerFields.noPadding.bottom": {
        "type": "boolean"
      },
      "containerFields.background.isDark": {
        "type": "boolean"
      },
      "text.titleTag": {
        "type": "string",
        "enum": ["h1", "h2", "h3", "h4", "h5", "h6"],
        "default": "h2"
      },
      "cards": {
        "type": "array",
        "items": {
          "properties": {
            "text.titleTag": {
              "type": "string",
              "enum": ["h1", "h2", "h3", "h4", "h5", "h6"],
              "default": "h3"
            }
          }
        }
      }
    }
  }
}
