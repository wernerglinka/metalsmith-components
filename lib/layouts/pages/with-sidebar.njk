{% from "components/_partials/breadcrumbs/breadcrumbs.njk" import breadcrumbs %}

<!doctype html>
<html class="no-js" lang="">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com"/>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;500&family=Open+Sans:wght@300;500&display=swap"/>
    <link rel="stylesheet" href="/assets/main.css"/>
  </head>

  <body class="with-sidebar {{ bodyClasses }}">
    <span id="top"></span>
    {% include "components/sections/header/header.njk" %}

    <aside class="references sidebar">
      {% include "components/_helpers/references.njk" %}
    </aside>

    <main>
      {{ breadcrumbs(navigation.breadcrumbs) }}

      {% block body %}
        {# will be replaced by page content #}
      {% endblock %}

      {% include "components/sections/footer/footer.njk" %}
    </main>


    <script src="/assets/main.js"></script>

    <a class="to-top" href="#top">
      {% include "icons/arrow-up.njk" %}
    </a>
  </body>
</html>